<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>forumtest.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/forumtest/greet</url-pattern>
  </servlet-mapping>
  
    <servlet>
    <servlet-name>postServiceImpl</servlet-name>
    <servlet-class>forumtest.server.PostServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>postServiceImpl</servlet-name>
    <url-pattern>/forumtest/posts</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>loginServiceImpl</servlet-name>
    <servlet-class>forumtest.server.LoginServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>loginServiceImpl</servlet-name>
    <url-pattern>/forumtest/login</url-pattern>
  </servlet-mapping>
  
  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Forumtest.html</welcome-file>
  </welcome-file-list>

</web-app>
